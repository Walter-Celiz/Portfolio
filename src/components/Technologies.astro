---
import { technologies } from "../assets/data";
import TechnologyCard from "./TechnologyCard.astro";
---

<div class="w-[75%] mx-auto mt-20 mb-10" data-tech-h1>
  <h2
    class="cursor-pointer font-bold w-fit md:mx-0 md:ml-5 sm:text-6xl xs:text-[40px] xs:mx-auto"
  >
    Technologies
  </h2>
</div>

<!--=============== Slider ===============-->
<div class="overflow-x-hidden whitespace-nowrap cursor-pointer" data-tech-wrapper>
  <div class="tech-card inline-block">
    {
      technologies.map((tech) => (
        <div class="inline-block m-0">
          <TechnologyCard text={tech.text} logo={tech.logo} />
        </div>
      ))
    }
  </div>
</div>
